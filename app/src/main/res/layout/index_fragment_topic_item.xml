<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lay_bg"
        android:layout_width="@dimen/value_160dp"
        android:layout_height="@dimen/value_85dp"
        android:layout_marginRight="@dimen/value_8dp"
        android:background="@drawable/background_d7d7d7">

        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_85dp"
            android:background="@drawable/shape_40000000"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="话题名称"
            android:layout_marginTop="@dimen/value_15dp"
            android:textColor="@color/color_white"
            android:textSize="@dimen/value_15sp" />

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_topic_title"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/value_2dp"
            android:visibility="invisible"
            android:src="@mipmap/bg_inclined_bar_s" />

        <TextView
            android:id="@+id/tv_topic_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_line"
            android:layout_centerHorizontal="true"
            android:text="428934参与"
            android:textColor="@color/color_white"
            android:textSize="@dimen/value_12sp" />

    </RelativeLayout>

</LinearLayout>